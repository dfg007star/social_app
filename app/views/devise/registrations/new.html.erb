<div class="column mt-6">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input mb-3", placeholder: 'Email' %>

  


    <%= f.text_field :name, class: "input mb-3", placeholder: 'Name' %>





    <%= f.password_field :password, autocomplete: "new-password", class: "input mb-3", placeholder: 'Password' %>




    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input mb-3", placeholder: 'Password confirmation' %>



    <%= f.submit "Sign up", class: "button is-link mb-3" %>

<% end %>

<%= render "devise/shared/links" %>

</div><div class="column mt-6"></div>